{
  "name": "wai-chat",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0",
    "build": "next build",
    "start": "concurrently \"npx tsx src/server.ts\" \"next start -H 0.0.0.0 -p $PORT\"",
    "start:prod": "concurrently \"npx tsx src/server.ts\" \"next start -p $PORT\"",
    "lint": "next lint",
    "server": "npx tsx src/server.ts",
    "dev-all": "concurrently \"npm run server\" \"npm run dev\""
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "next": "14.2.15",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@tailwindcss/postcss": "^4",
    "tailwindcss": "^4",
    "eslint": "^8",
    "eslint-config-next": "14.2.15",
    "@eslint/eslintrc": "^3",
    "tsx": "^4.7.0",
    "concurrently": "^8.2.0"
  }
}
